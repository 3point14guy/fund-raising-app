<h1><%= @project.title %></h1>
<div class="row">
  <div class="col-md-6">
    <p>Amount pledged: <%= number_to_currency(@project.funding) %></p>
    <p>Funding goal: <%= number_to_currency(@project.goal) %></p>
  </div>
  <div class="col-md-6">
    <p>Days remaining: <%= days_left(@project.deadline) %></p>
    <%= link_to "Edit", edit_project_path(@project), class: "btn btn-outline-warning" %>
    <%= link_to "Delete", project_path(@project), method: :delete, class: "btn btn-outline-danger" %>
  </div>
</div>

<hr>
<p><%= @project.description %></p>
<br>

<%= link_to "All Projects", root_path, class: "btn btn-outline-primary" %>
